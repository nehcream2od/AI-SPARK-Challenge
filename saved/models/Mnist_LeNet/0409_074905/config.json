{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    "arch": {
        "type": "GANModel",
        "args": {
            "hidden_size": [
                16,
                8
            ]
        }
    },
    "data_module": {
        "type": "CustomDataModule",
        "args": {
            "data_dir": "/Users/nehcream/Documents/Workspace/Active/AI-SPARK-Challenge/data",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2,
            "prepare_data_per_node": false,
            "preprocess_fn": {
                "scaler": "standard",
                "scaler_comment": [
                    "False",
                    "minmax",
                    "standard",
                    "robust",
                    "gaussian",
                    "log"
                ],
                "fourier_transform": {
                    "apply": false,
                    "features": [
                        "motor_current",
                        "motor_rpm",
                        "motor_vibe"
                    ]
                }
            },
            "kfold": {
                "n_splits": 5,
                "shuffle": true,
                "random_state": 42
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}